<h1 class="center">EAT-DA-BURGER!</h1>

<img src="/assets/images/burger3.gif" alt="Burger" width="250px">

<br><br>

<div class="burger-options">
  <div class="left">
    <h2>Burgers waiting to be devoured!</h2>
    <ul>
      {{#each burgers}}
        {{#unless devoured}}
          {{> burgers/burger-block devoured=true}}
        {{/unless}}
      {{/each}}
    </ul>
  </div>


  <div class="right">
    <h2> Burgers that have been devoured!</h2>
    <ul>
      {{#each burgers}}
        {{#if devoured}}
          {{> burgers/burger-block devoured=false}}
        {{/if}}
      {{/each}}
    </ul>

  </div>
</div>


<form class="create-form center">
  <h2>Add A Burger!</h2>

  <div class="form-group">
    <label for="burger">Burger Name:</label>
    <input type="text" id="burger" name="name">
    <br>
    <button type="submit">Add Burger</button>
    <h6> Enter the type of burger you would like to eat and then hit "Add Burger"</h6>
  </div>
</form>
